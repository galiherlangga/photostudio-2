---
export interface Props {
	title: string;
	price: number;
	points: string;
	href: string;
}

const { href, title, points, price } = Astro.props;
---

<div class="bg-[#A59998] rounded-xl px-12 py-8 mb-5 md:mx-5 md:w-80 2xl:mx-10">
	<h4 class="text-2xl mb-2">{title}</h4>
	<h3 class="text-3xl mb-10 font-bold">${price}</h3>
	<!-- loop points -->
	{ points.split(';').map((point) => (
		<p><i class="fas fa-check mr-3"></i>{point}</p>
		<br>
	)) }
	<a href={href}>
		<div class="mt-5 bg-gray-300 text-center py-4 rounded-lg text-xl font-bold">
			Book Now
		</div>
	</a>
</div>
